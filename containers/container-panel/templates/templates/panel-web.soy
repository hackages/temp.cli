{namespace templates_PanelContainer}
/**
 * Lays out container for a simple panel to be a child for a Deck Container
 * @param item Item in context
 */
{template .PanelContainer}
	<div data-pid="{$item.name}" id="{$item.name}" class="bp-container bp-ui-dragRoot tab-pane">
		<div class="bp-area --area lp-panel-mainarea">
			{foreach $child in $item.children}
				{include($child) |noAutoescape}
			{/foreach}
		</div>
	</div>
{/template}
